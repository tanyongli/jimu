*
  padding: 0px
  margin: 0px
 
body 
  background-color: #F1FFE6
.container 
  width: 950px
  margin: 70px auto 0px auto
  text-align: center
  .emoji-container
    display: -webkit-box
    display: -ms-flexbox
    display: flex
    
    column(arg)
      -ms-grid-column-align: arg
      justify-items: arg
    column:center
    
    vender(n,arg)
      -webkit-box-{n}:arg
      -ms-flex-{n}:arg
    align()
      vender('align',arguments)
    align:start
    
    align-items: flex-start
    
    vender(n,arg)
     -ms-{n}: wrap
     {n}: wrap
    wrap()
      vender('flex-wrap',arguments)
    wrap:wrap
    
    .icon 
      mr = 40px 
      margin-right: mr
      margin-bottom: mr
      &:nth-child(6n)
        margin-right: 0px
.icon 
  w = 125px 
  h = 120px
  width: w
  height:h 
  position: relative
  .frog
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    .body
      width: 110px
      height: 86px
      background-color: #A3D768
      border-radius: 50%
      position: absolute
      top: 25px
      left: 0
      right: 0
      margin: auto
      box-shadow: 4px 4px 0px 0px rgba(163, 215, 104, 0.3)  
      .mouth
        margin: auto
.icon
 .frog
   .eyes
     width: 86px
     height: 35px
     position: absolute
     top: 8px
     left: 0
     right: 0
     margin: auto
     .eye
       width: 35px
       height: 35px
       &:before
         content: ""
         display: block
         width: 100%
         height: 100%
         background-color: #A3D768
         border-radius: 50%
       .eye-inner
         background-color: #fff
         width: 80%
         height: 80%
         position: absolute
         top: 10%
         left: 10%
         border-radius: 50%
         .pupil
           background-color: #3F6A34
           width: 60%
           height: 60%
           position: absolute
           top: 20%
           left: 20%
           border-radius: 50%
           .light 
             background-color: #fff
             width: 50%
             height: 50%
             position: absolute
             top: 10%
             left: 10%
             border-radius: 50%
.icon 
 .frog 
  .eyes 
   .eye-left 
     position: absolute
     top: 0px
     left: 0
   .eye-right 
    position: absolute
    top: 0px
    right: 0
.frog#frog-1 
  .body 
   .mouth 
     width: 18px
     height: 22px
     border-bottom: 3px solid #3F6A34
     position: absolute
     top: 6px
     left: 0
     right: 0
     vender(n,arg)
       -webkit-{n}:arg
       {n}:arg
     ani()
       vender('animation',arguments)
     ani:smile 3.8s linear 0s infinite
     
@keyframes smile 
  0% 
    border-radius: 0%
  20% 
    border-radius: 50%
  70% 
    border-radius: 50%
  


   
     
     
     
     
     
     
     
     
     
       
       
       